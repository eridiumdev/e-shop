<div class="modal fade" id="{% block modal_id %}modal{% endblock %}"
    tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    {% block modal_title %}Title{% endblock %}
                </h4>
            </div>
            <div class="modal-body">
                <p>{% block modal_body %}Body{% endblock %}</p>
            </div>
            <div class="modal-footer">
                {% block button_yes %}
                    <button type="button" data-dismiss="modal"
                        class="btn btn-{% block yes_color %}primary{% endblock %}"
                        id="{% block yes_id %}confirm_button{% endblock %}">
                        {% block yes_text %}Confrim{% endblock %}
                    </button>
                {% endblock %}
                {% block button_no %}
                    <button type="button" data-dismiss="modal"
                        class="btn btn-{% block no_color %}default{% endblock %}"
                        id="{% block no_id %}cancel_button{% endblock %}">
                        {% block no_text %}Cancel{% endblock %}
                    </button>
                {% endblock %}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
