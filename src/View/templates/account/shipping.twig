{% extends 'base.twig' %}

{% block title %}{{parent()}} | Shipping Details{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/account.css">
{% endblock %}

{% block content %}
<div class="container">
    <div class="col-sm-3 acc-sidebar">
        {% include 'account/inc/sidebar.twig' %}
    </div>
    <div class="col-sm-9 col-md-6 col-md-offset-1">
        <h1>Shipping Details</h1>
        <br>
        {% include "inc/flashes.twig" %}
        <form class="well">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Full name" value="asd" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone number" value="1231232" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <textarea rows="4" cols="50" class="form-control" id="address" name="address" placeholder="Full address" required>asdadsdas
                asdasds</textarea>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Apply Changes</button>
        </form>
    </div>
</div>
{% endblock %}
