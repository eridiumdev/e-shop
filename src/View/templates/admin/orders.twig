{% extends 'base-admin.twig' %}

{% block title %}{{parent()}} | Orders{% endblock %}

{% block scripts %}
    <script src="/js/dialogues.js"></script>
    <script src="/js/popover.js"></script>
    <script src="/js/check_all.js"></script>
    <script src="/js/jquery.tablesorter.min.js"></script>
    <script src="/js/tablesorter.js"></script>
{% endblock %}

{% block content %}
<div class="col-sm-9">
    <div class="well">
        <h2>Order Management</h2>
        <br>
        {% include "inc/flashes.twig" %}
    </div>
    <div class="well table-responsive">
        <form action="/admin/orders/delete" method="post">
        <table id="tableToSort_6-8" class="table table-striped">
            <thead>
                <tr>
                    <th role="button">ID</th>
                    <th role="button">Date</th>
                    <th role="button">User</th>
                    <th role="button">Total</th>
                    <th role="button">Delivery</th>
                    <th role="button">Payment</th>
                    <th role="button">Status</th>
                    <th></th>
                    <th></th>
                    <th role="button" class="col-sm-1 checkable">
                        <input role="button" type="checkbox" id="checkAll">
                    </th>
                </tr>
            </thead>
            <tbody id="tableTBody">
                {% for i in 1..10 %}
                    {% include "admin/orders/tr-order.twig" %}
                {% endfor %}
            </tbody>
            <tfoot>
                <td colspan="10">
                    <input class="btn btn-sm btn-danger" type="submit" name="deleteSelected" value="Delete selected">
                </td>
            </tfoot>
        </table>
        </form>
    </div>
</div>
{% endblock %}
